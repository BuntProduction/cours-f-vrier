CREATE TABLE Auteurs (
AuteurID INT AUTO_INCREMENT PRIMARY KEY,
Nom VARCHAR(255) NOT NULL,
Prenom VARCHAR(255),
Nationalite VARCHAR(100)
);

CREATE TABLE Genres (
GenreID INT AUTO_INCREMENT PRIMARY KEY,
Nom VARCHAR(100) NOT NULL
);

CREATE TABLE Livres (
LivreID INT AUTO_INCREMENT PRIMARY KEY,
Titre VARCHAR(255) NOT NULL,
AnneePublication YEAR,
GenreID INT,
AuteurID INT,
FOREIGN KEY (GenreID) REFERENCES Genres(GenreID),
FOREIGN KEY (AuteurID) REFERENCES Auteurs(AuteurID)
);

CREATE TABLE Etudiants (
EtudiantID INT AUTO_INCREMENT PRIMARY KEY,
Nom VARCHAR(255) NOT NULL,
Prenom VARCHAR(255),
DateInscription DATE,
Email VARCHAR(255)
);

CREATE TABLE Emprunts (
EmpruntID INT AUTO_INCREMENT PRIMARY KEY,
LivreID INT,
EtudiantID INT,
DateEmprunt DATE,
DateRetour DATE,
FOREIGN KEY (LivreID) REFERENCES Livres(LivreID),
FOREIGN KEY (EtudiantID) REFERENCES Etudiants(EtudiantID)
);
